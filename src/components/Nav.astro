---
import { type Database } from "notiondown";

import config from "../config";
import { getUrl } from "../utils";

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<nav class:list={[config.nav?.classes]}>
  <div
    class="max-w-5xl mx-auto px-6 py-3 flex items-center justify-between h-16"
  >
    <a
      href={getUrl("/")}
      class:list={["text-2xl title", config.nav?.titleClasses]}>{title}</a
    >
    <div class="flex gap-4 text-xl font-medium">
      <a href={getUrl("/blog/")} class="text-sm hover:underline">余白</a>
      <!-- <a href={getUrl("/blog/")} class="text-sm hover:underline">視点</a> -->
    </div>
  </div>
</nav>
<style
  define:vars={{
    titleFontFamily: config.nav?.titleFontFamily || "inherit",
  }}
>
  .title {
    font-family: var(--titleFontFamily);
  }
</style>
